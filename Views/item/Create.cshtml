@model InAndOut.Models.Item

<div class="border-bottom p-3">
    <form class="form-group" method="post" asp-action="Create">

        <div>
            <h2>Add Item</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
        <div class="form-group row">
            <div class="col">
                <label asp-for="ItemName"></label>
            </div>
            <div class="col">
                <label asp-for="Borrower"></label>
            </div>
            <div class="col">
                <label asp-for="Lender"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <input asp-for="ItemName" class="form-control">
                <span asp-validation-for="ItemName" class="text-danger"> </span>

            </div>
            <div class="col">
                <input asp-for="Borrower" class="form-control">
                <span asp-validation-for="Borrower" class="text-danger"> </span>

            </div>
            <div class="col">
                <input asp-for="Lender" class="form-control">
                <span asp-validation-for="Lender" class="text-danger"> </span>

            </div>
        </div>
        <div class="form-group row">
            <div class="col-8 offset-2 row ">
                <div class="col">
                    <button type="submit" class="btn btn-info w-75">Create</button>
                </div>
                <div class="col">
                    <button asp-action="Index" class="btn btn-danger w-75">Back</button>
                </div>
            </div>

        </div>

    </form>
</div>


@section Scripts {
@{
    <partial name="_ValidationScriptsPartial" />
}
}