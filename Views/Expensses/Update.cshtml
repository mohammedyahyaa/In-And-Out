@model InAndOut.Models.ViewModels.ExpensesVm

<div class="border p-3">
    <form class="form-group" method="post" asp-action="UpdatePost">
        <input asp-for="Expense.Id" hidden />
        <div>
            <h2 class="text-primary">Update Expense</h2>
        </div>
        <div class="form-group row">
            <div class="col">
                <label asp-for="Expense.ExpenseName"></label>
                <span asp-validation-for="Expense.ExpenseName" class="text-danger"> </span>
            </div>
            <div class="col">
                <label asp-for="Expense.Amount"></label>
                <span asp-validation-for="Expense.Amount" class="text-danger"> </span>
            </div>
            <div class="col">
                <label asp-for="Expense.ExpenseType"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <input asp-for="Expense.ExpenseName" class="form-control">
            </div>
            <div class="col">
                <input asp-for="Expense.Amount" class="form-control">
            </div>
            <div class="col">
                <select asp-for="Expense.ExpenseTypeId"  asp-items="@Model.TypeDropDown"  class="form-control">
                    <option selected> -- Select Expense Type </option>
                </select>
                <span asp-validation-for="Expense.ExpenseType" class="text-danger"> </span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8 offset-2 row ">
                <div class="col">
                    <button type="submit" class="btn btn-info w-75">Update</button>
                </div>
                <div class="col">   
                    <button asp-action="Index" class="btn btn-danger w-75">Back</button>
                </div>
            </div>

        </div>

    </form>
</div>


@section Scripts {
@{
    <partial name="_ValidationScriptsPartial" />
}
}