@model InAndOut.Models.Expense


<div class="border p-3">
    <form  method="post" asp-action="DeletePost">
        <input asp-for="Id" hidden/>
        <div>
            <h2 class="text-primary">Delete Expense</h2>
        </div>
        <div class="form-group row">
            <div class="col">
                <label asp-for="ExpenseName"></label>

            </div>
            <div class="col">
                <label asp-for="Amount"></label>

            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <input asp-for="ExpenseName" disabled class="form-control">
            </div>
            <div class="col">
                <input asp-for="Amount" disabled class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8 offset-2 row ">
                <div class="col"> 
                    <button type="submit" class="btn btn-danger w-75">Delete</button>
                </div>
                <div class="col">
                    <button asp-action="Index" class="btn btn-success w-75">Back</button>
                </div>
            </div>

        </div>

    </form>
</div>



@section Scripts {
@{
    <partial name="_ValidationScriptsPartial" />
}
}