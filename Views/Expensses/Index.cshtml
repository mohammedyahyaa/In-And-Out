@model IEnumerable<InAndOut.Models.Expense>


<div class="container p-3">

    <div class="row pt-4">
        <div class="row col-6">
            <h2 class="text-primary">ExpensesList</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expensses" asp-action="Create" class="btn btn-primary"> Create new Expense </a>
        </div>
    </div>


    @if (Model.Count() > 0)
    {

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Expense Name</th>
                    <th>Amount</th>
                    <th>Expense Type </th>
                    <th>Modification</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var Expense in Model)
                {
                    <tr>
                        <td width="35%">@Expense.ExpenseName</td>
                        <td width="35%"> @Expense.Amount</td>
                        <td width="35%"> @Expense.ExpenseType.Name</td>

                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Expensses" asp-action="Update" asp-route-Id="@Expense.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Expensses" asp-action="Delete" asp-route-Id="@Expense.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    }

    else
    {

        <p>Expenses Not Found </p>
    }

</div>